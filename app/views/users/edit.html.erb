<div class="container">
  <div class="row">
    <div class="col-xs-7 col-xs-offset-3">
      <h1>登録情報編集</h1>
      <%= form_for(@user,url: users_update_path) do |f| %>
      <div class="field">
        <%= f.label :'会社名' %>
        <span class="name-edit"><%= f.text_field :name, autofocus: true %></span>
      </div>

      <div class="field">
        <%= f.label :'郵便番号(ハイフンなし)' %>
        <span class="postal_code-edit"><%= f.text_field :postal_code, autofocus: true %></span>
      </div>

      <div class="field">
        <%= f.label :住所 %>
        <span class="adress-edit"><%= f.text_field :adress, autofocus: true %></span>
      </div>

      <div class="field">
        <%= f.label :'電話番号(ハイフンなし)' %>
        <span class="telephone_number-edit"><%= f.text_field :telephone_number, autofocus: true %></span>
      </div>

      <div class="field">
        <%= f.label :メールアドレス %>
        <span class="email-edit"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
      </div>
      <div class="edit-create">
        <%= f.submit "編集内容を保存する", class:"btn btn-info primary" %>
      </div>

      <% end %>
    </div>
  </div>
</div>


