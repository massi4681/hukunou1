<h1>マイページ</h1>

<h3>登録情報<%= link_to '編集する', users_edit_path %></h3>

<table>
	<tbody>
		<tr>
			<td>会社名</td>
			<td><%= @user.name %></td>
		</tr>
		<tr>
			<td>郵便番号(ハイフンなし)</td>
			<td><%= @user.postal_code %></td>
		</tr>
		<tr>
			<td>住所</td>
			<td><%= @user.adress %></td>
		</tr>
		<tr>
			<td>電話番号(ハイフンなし)</td>
			<td><%= @user.telephone_number %></td>
		</tr>
		<tr>
			<td>メールアドレス</td>
			<td><%= @user.email %></td>
		</tr>
	</tbody>
</table>

<h3>お仕事の日程・履歴  <%= link_to '詳細', orders_path %></h3>

<table>
	<tbody>
		<% @items.each do |item| %>
		<tr>
			<td>投稿日</td>
			<td><%= item.created_at.strftime('%Y/%m/%d') %></td>
		</tr>
		<tr>
			<td>お仕事名</td>
			<td><%= item.item_name %></td>
		</tr>
		<tr>
			<td><%= link_to "編集", edit_item_path(item.id) %></td>
			<td><%= link_to "削除", item_path(item.id), method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>

