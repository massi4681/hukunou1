<div class="container">
  <div class="row">
    <div class="col-xs-10 col-xs-offset-1">
      <div class="new-sign">
        <h2>新規会員登録</h2>
      </div>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :'会社名' %>
        <span class="sign-up-name"><%= f.text_field :name, autofocus: true %>
        </div>


        <div class="field">
          <%= f.label :'郵便番号(ハイフンなし)' %>
          <span class="sign-up-postal-code"><%= f.text_field :postal_code, autofocus: true %></span>
        </div>

        <div class="field">
          <%= f.label :住所 %>
          <span class="sign-up-adress"><%= f.text_field :adress, autofocus: true %></span>
        </div>

        <div class="field">
          <%= f.label :'電話番号(ハイフンなし)' %>
          <span class="sign-up-telephone_number"><%= f.text_field :telephone_number, autofocus: true %></span>
        </div>

        <div class="field">
          <%= f.label :メールアドレス %>
          <span class="sign-up-email"><%= f.email_field :email, autofocus: true, autocomplete: "email" %></span>
        </div>

        <div class="field">
          <%= f.label :パスワード %>
          <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上）</em>
          <% end %>
          <span class="sign-up-password"><%= f.password_field :password, autocomplete: "new-password" %></span>
        </div>

        <div class="field">
          <%= f.label :'パスワード(確認用)' %>
          <span class="sign-up-password_confirmation"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></span>
        </div>

        <div class="actions">
          <%= f.submit "新規会員登録", class:"btn btn-success log" %>
        </div>
        <% end %>
        <h4>既に登録済みの方</h4>
        <%= link_to 'こちら', new_user_session_path %>からログインしてください。
      </div>
    </div>
  </div>
